<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarRatingPage">

    <TextView
        android:id="@+id/textView153"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="5 is the highest and 1 is the lowest"
        android:textColor="#000"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView71"
        app:layout_constraintTop_toBottomOf="@+id/imageView68" />

    <TextView
        android:id="@+id/textView154"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Rate : "
        android:textColor="#000"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/textView153"
        app:layout_constraintTop_toBottomOf="@+id/textView153" />

    <TextView
        android:id="@+id/textView152"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Comment :"
        android:textColor="#000"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/textView153"
        app:layout_constraintTop_toBottomOf="@+id/spinnerRating" />

    <ImageView
        android:id="@+id/imageView68"
        android:layout_width="120dp"
        android:layout_height="113dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView71"
        app:srcCompat="@drawable/star_png_real" />

    <Spinner
        android:id="@+id/spinnerRating"
        android:layout_width="287dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView154"
        app:layout_constraintStart_toEndOf="@+id/textView154"
        app:layout_constraintTop_toTopOf="@+id/textView154" />

    <ImageView
        android:id="@+id/imageView71"
        android:layout_width="94dp"
        android:layout_height="53dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_name" />

    <EditText
        android:id="@+id/commentEditText"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_styles"
        android:gravity="top|left"
        android:lines="10"
        android:maxLines="15"
        android:minLines="5"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="@+id/spinnerRating"
        app:layout_constraintStart_toStartOf="@+id/textView152"
        app:layout_constraintTop_toBottomOf="@+id/textView152" />

    <Button
        android:id="@+id/submitRateButton"
        android:layout_width="357dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/primary_color"
        android:text="Submit"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/spinnerRating"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView154"
        app:layout_constraintTop_toBottomOf="@+id/commentEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>